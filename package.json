{
  "name": "toolglass",
  "version": "0.1.0",
  "author": "Patrick Dubroy <pdubroy@gmail.com> (http://dubroy.com)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^5.9.1",
    "dirwatch": "^1.1.0",
    "jshint": "^2.5.2",
    "tap-spec": "^1.0.1",
    "tape": "^2.13.4",
    "watchify": "^1.0.1"
  },
  "scripts": {
    "build": "browserify -d -s toolglass -o dist/toolglass-bundle.js index.js",
    "watch": "watchify -v -d -s toolglass -o dist/toolglass-bundle.js index.js",
    "test": "tape test/*.js | tap-spec",
    "test-continuous": "npm test; dirwatch *.js test/*.js -c 'which tput && tput clear; date; tape test/*.js' | tap-spec",
    "prepublish": "npm run build && npm run test && npm run lint",
    "lint": "jshint index.js lib test"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  }
}
